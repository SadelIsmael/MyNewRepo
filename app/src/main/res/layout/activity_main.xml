<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/LogoMain"
        android:layout_width="426dp"
        android:layout_height="816dp"
        android:layout_marginTop="-100dp"
        android:background="@drawable/ontimelogo"
        android:onClick="GoLogIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ontimelogo"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/SignUpMain"
        android:onClick="GoSignUp"
        android:layout_width="242dp"
        android:layout_height="56dp"
        android:layout_marginBottom="50dp"
        android:background="@color/MainButtons"
        android:text="Sign Up"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/LogInMain"
        android:layout_width="242dp"
        android:layout_height="56dp"
        android:layout_marginBottom="40dp"
        android:background="@color/MainButtons"
        android:text="Log In"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/SignUpMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>